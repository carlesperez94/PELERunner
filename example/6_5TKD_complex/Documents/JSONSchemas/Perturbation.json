{
    "type" : "object",
    "additionalProperties" : false, 
    "properties" : {
        "perturbationType" : {
            "type" : "string",
            "enum" : ["metropolis", "naive"]
        },
        "rotationAngles" : {
            "type" : "string",
            "enum" : ["coupled", "nonCoupled"],
            "default" : "coupled"
        },          
        "translationDirection" : {
            "type" : "string",
            "enum" : ["steered", "random"],
            "default" : "random"
        },
        "translationRangeType" : {
            "type" : "string",
            "enum" : ["centered", "spherical"],
            "default" : "centered"
        },  
        "parameters" : {
            "type" : "object",
            "additionalProperties" : false,
            "properties" : {
                "numberOfSteps" : {
                    "type" : "integer",
                    "minimum" : 0,
                    "default" : 1000
                },
                "numberOfTrials" : {
                    "type" : "integer",
                    "minimum" : 0,
                    "default" : 1
                },
                "numberOfStericTrials" : {
                    "type" : "integer",
                    "minimum" : 0,
                    "default" : 1000
                },
                "atLeastOneSelectedTrial" : {
                	"type" : "boolean",
                	"default": false
                },
                "maxTrialsForAtLeastOne" : {
                	"type" : "integer",
                	"minimum" : 0,
                	"default" : 1000
                },
                "rotationScalingFactor" : {
                    "type" : "number",
                    "default" : 0.5
                },
                "rotationRangeFactor" : {
                    "type" : "number",
                    "default" : 0.25
                },
                "translationRange" : {
                    "type" : "number",
                    "default" : 1.0
                },
                "overlapFactor" : {
                    "type" : "number",
                    "default" : 0.7
                },
                "temperature" : {
                    "type" : "number",
                    "default" : 1000
                },
                "gridResolution" : {
                    "type" : "number",
                    "default" : 10.0
                },
                "steeringUpdateFrequency" : {
                    "type" : "number",
                    "default" : 1
                },
                "influenceRange" : {
                    "type" : "number",
                    "default" : 5
                },
                "peleRegionType" : {
                    "type" : "string",
                    "default" : "allLinks"
                }
            }
        },
        "Box" : @Box@ 
    } 
}
