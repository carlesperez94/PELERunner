{
    "description": "Schema for a PELE minimization command block",
    "required": true,
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "commandType": {
            "type": "string",
            "required": true,
            "enum": [
                "minimization"
            ]
        },
        "complexSavingPath" : {
            "type" : "string",
            "default" : ""
        },
        "Minimizer": {
            "type" : "object",
            "additionalProperties" : false,
            "properties" : {
                "algorithm" : {
                    "type" : "string",
                    "enum" : ["TruncatedNewton", "SteepestDescent", "ConjugatedGradient", "uniformForceBiasedMonteCarlo"],
                    "default" : "TruncatedNewton"
                },
                "parameters" : {
                    "type" : "object",
                    "additionalProperties" : false,
                    "properties" : {
                        "EnergyDifference" : {
                            "type" : "number"
                        },
                        "MinimumRMS" : {
                            "type" : "number"
                        },
                        "MaximumMinimizationIterations": {
                            "type" : "integer",
                            "minimum" : 0
                        },
                        "MaximumNewtonIterations" : {
                            "description" : "Parameter only valid for TruncatedNewton minimizer",
                            "type" : "integer",
                            "minimum" : 0
                        },
                        "nonBondingListUpdatedEachMinStep" : {
                            "description" : "Parameter only valid for TruncatedNewton minimizer",
                            "type" : "boolean"
                        },
                        "sgbUpdated" : {
                            "description" : "Parameter only valid for TruncatedNewton minimizer",
                            "type" : "boolean"
                        },
                        "alphaUpdated" : {
                            "description" : "Parameter only valid for TruncatedNewton minimizer",
                            "type" : "boolean"
                        },
                        "iterationsBetweenNBlistLongUpdate" : {
                            "description" : "Parameter only valid for TruncatedNewton minimizer",
                            "type" : "integer",
                            "minimum" : 0
                        }
                    }
                }
            }
        }
,
        "nonBondingVersion": {
            "type": "string",
            "enum": [
                "NB_GEN_2",
                "NB_GEN_MSCALE"
            ]
        },
        "cutoffList": {
            "type": [
                {
                    "type": "array",
                    "minItems": 1,
                    "maxItems": 1,
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "cutoff_v2": {
                                "type": "number"
                            }
                        }
                    }
                },
                {
                    "type": "array",
                    "minItems": 6,
                    "maxItems": 6,
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "type": {
                                "type": "string",
                                "enum": [
                                    "shortNeutrumNeutrum",
                                    "shortChargedNeutrum",
                                    "shortChargedCharged",
                                    "longNeutrumNeutrum",
                                    "longChargedNeutrum",
                                    "longChargedCharged"
                                ],
                                "required": true
                            },
                            "value": {
                                "type": "number",
                                "required": true
                            }
                        }
                    }
                }
            ]
        }
    }
}