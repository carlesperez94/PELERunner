{
    "description": "Schema for a PELE simulation block",
    "required": true,
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "commandType": {
            "type": "string",
            "required": true,
            "enum": [
                "energyComputation"
            ],
        },
	    "NonBonding" : {
            "type" : "object",
            "additionalProperties" : false, 
            "properties" : { 
                "nonBondingVersion" : {
                    "type" : "string",
                    "enum" : ["NB_GEN_2", "NB_GEN_MSCALE"]
                },
                "cutoffList" : {
                    "type" : [
                        {
                            "type" : "array",
                            "minItems" : 1,
                            "maxItems" : 1,
                            "items": {
                                "type" : "object",
                                "additionalProperties" : false, 
                                "properties": {
                                    "cutoff_v2" : {
                                        "type" : "number"
                                    }
                                }
                            }
                        }, {
                            "type" : "array",
                            "minItems" : 6,
                            "maxItems" : 6,
                            "items" : {
                                "type" : "object",
                                "additionalProperties" : false,
                                "properties" : {
                                    "type" : {
                                        "type" : "string",
                                        "enum" : ["shortNeutrumNeutrum", "shortChargedNeutrum", "shortChargedCharged", 
                                            "longNeutrumNeutrum", "longChargedNeutrum", "longChargedCharged"],
                                        "required" : true
                                    },
                                    "value" : {
                                        "type" : "number",
                                        "required" : true
                                    }
                                }
                            }
                        }
                    ]
                }
            }            
        }
    }
}