{
   "description" : "Since there are 3 kinds of boxes, there are 3 schemas. Your control file should validate against one of them",
    "type": [
        {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "prismaticBox"
                    ],
                    "required": true
                },
                "x_y_z": {
                    "type": "array",
                    "required": true,
                    "minItems": 3,
                    "maxItems": 3,
                    "items": {
                        "type": "number"
                    }
                },
                "fixedCenter": {
                    "type": "array",
                    "minItems": 3,
                    "maxItems": 3,
                    "items": {
                        "type": "number"
                    }
                },
                "selectionOfAtomsForCOM": @Selector@
            }
        },
        {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "sphericalBox"
                    ],
                    "required": true
                },
                "radius": {
                    "type": "number",
                    "required": true
                },
                "fixedCenter": {
                    "type": "array",
                    "minItems": 3,
                    "maxItems": 3,
                    "items": {
                        "type": "number"
                    }
                },
                "selectionOfAtomsForCOM": @Selector@
            }
        },
        {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "sphericalShellBox"
                    ],
                    "required": true
                },
                "innerRadius": {
                    "type": "number",
                    "required": true
                },
                "outerRadius": {
                    "type": "number",
                    "required": true
                },
                "fixedCenter": {
                    "type": "array",
                    "minItems": 3,
                    "maxItems": 3,
                    "items": {
                        "type": "number"
                    }
                },
                "selectionOfAtomsForCOM": @Selector@
            }
        }
    ]
}