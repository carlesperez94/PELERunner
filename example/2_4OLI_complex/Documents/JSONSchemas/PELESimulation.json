{
    "description": "Schema for a PELE simulation block",
    "required": true,
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "commandType": {
            "type": "string",
            "required": true,
            "enum": [
                "peleSimulation"
            ]
        },
		"complexSavingPath" : {
			"type" : "string",
			"default" : ""
		},
        "PELE_Output": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "reportPath": {
                    "type": "string"
                },
                "trajectoryPath": {
                    "type": "string"
                },
                "stepsFolder": {
                    "type": "string"
                },
                "savingFrequencyForAcceptedSteps": {
                    "type": "integer",
                    "minimum": 0
                },
                "savingMode": {
                    "type": "string",
                    "enum": [
                        "savingTrajectory",
                        "savingSteps",
                        "savingBoth"
                    ]
                },
                "initialPdbPath": {
                    "type": "string"
                },
                "finalPdbPath": {
                    "type": "string"
                },
                "controllerEventsLogPath": {
                    "type": "string"
                },
                "flushingFrequency": {
                    "type": "integer",
                    "minimum": 0
                }
            }
        },
        "RandomGenerator": @RandomGenerator@,
        "constraints": @Constraints@,
        "PELE_Parameters": @PELEParameters@,
        "NonBonding": @NonBonding@,
        "Minimizer": @Minimizer@,
        "includeInMinimization": @Selector@,
        "doNotIncludeInMinimization": @Selector@,
        "ANM": @ANM@,
        "Native": @Native@,
        "SideChainPrediction": @SideChainPrediction@,
        "Perturbation": @Perturbation@,
        "selectionToPerturb": @Selector@,
        "exitConditions": @ExitConditions@,
        "PeleTasks": {
            "type": "array",
            "minItems": 1,
            "required": true,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "PELE_Parameters": @PELEParameters@,
                    "NonBonding": @NonBonding@,
                    "Minimizer": @Minimizer@,
                    "includeInMinimization": @Selector@,
                    "doNotIncludeInMinimization": @Selector@,
                    "ANM": @ANM@,
                    "Native": @Native@,
                    "SideChainPrediction": @SideChainPrediction@,
                    "Perturbation": @Perturbation@,
                    "constraints": @Constraints@,
                    "selectionToPerturb": @Selector@,
                    "AtomPulling": @AtomPulling@,
                    "HydrogenBondsPerturbation": @HidrogenBondsPerturbation@,
                    "metrics": @Metrics@,
                    "track": @Trackers@,
                    "exitConditions": @ExitConditions@,
                    "jumpController" : @JumpController@,
                    "parametersChanges": @ParameterChanges@,
                    "jumpIf": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}